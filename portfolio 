  <script>
    // data for projects (replace with your own)
    const projects = [
      {id:1, title:'Portfolio Website', desc:'Personal portfolio with animations and responsive layout.', img:'https://picsum.photos/seed/p1/800/600', tags:['HTML','CSS','JS'], live:'#'},
      {id:2, title:'Task Manager App', desc:'A small SPA to manage daily tasks with localStorage.', img:'https://picsum.photos/seed/p2/800/600', tags:['JavaScript'], live:'#'},
      {id:3, title:'E-commerce UI', desc:'A product listing and cart UI prototype.', img:'https://picsum.photos/seed/p3/800/600', tags:['React','CSS'], live:'#'},
      {id:4, title:'Photo Gallery', desc:'Responsive image gallery with lightbox.', img:'https://picsum.photos/seed/p4/800/600', tags:['HTML','CSS','JS'], live:'#'}
    ];

    const grid = document.getElementById('projectsGrid');
    projects.forEach(p => {
      const el = document.createElement('article');
      el.className = 'project';
      el.innerHTML = `
        <img src="${p.img}" alt="${p.title}">
        <h3 style="margin:8px 0 4px">${p.title}</h3>
        <p style="color:var(--muted);font-size:14px">${p.desc}</p>
        <div class="meta">
          <div style="font-size:13px;color:var(--muted)">${p.tags.join(' â€¢ ')}</div>
          <div style="display:flex;gap:8px">
            <button class="btn" data-id="${p.id}">Details</button>
            <a class="btn" href="${p.live}" target="_blank">Live</a>
          </div>
        </div>`;
      grid.appendChild(el);
    });

    // modal logic
    const modal = document.getElementById('modal');
    const modalContent = document.getElementById('modalContent');
    grid.addEventListener('click', e => {
      const btn = e.target.closest('button[data-id]');
      if(!btn) return;
      const id = Number(btn.getAttribute('data-id'));
      const p = projects.find(x=>x.id===id);
      modalContent.innerHTML = `
        <h2>${p.title}</h2>
        <img src="${p.img}" alt="${p.title}" style="width:100%;border-radius:8px;margin-top:10px">
        <p style="color:var(--muted);margin-top:10px">${p.desc}</p>
        <p style="margin-top:8px">Tags: ${p.tags.join(', ')}</p>
        <p style="margin-top:12px"><a href="${p.live}">Open live</a></p>
      `;
      modal.classList.add('open');
    });
    document.getElementById('closeModal').addEventListener('click', ()=> modal.classList.remove('open'));
    modal.addEventListener('click', e => { if(e.target===modal) modal.classList.remove('open') });

    // mobile menu
    const menuToggle = document.querySelector('.menu-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');
    menuToggle.addEventListener('click', ()=> {
      if(mobileMenu.style.display==='none' || mobileMenu.style.display==='') mobileMenu.style.display='block'; else mobileMenu.style.display='none';
    });

    // contact form stub
    document.getElementById('contactForm').addEventListener('submit', e=>{
      e.preventDefault();
      const status = document.getElementById('formStatus');
      status.textContent = 'Thanks â€” message simulated (replace with your form handler).';
      e.target.reset();
    });

    // footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // small accessibility improvements
    document.querySelectorAll('a, button').forEach(el=> el.setAttribute('tabindex','0'));
  </script>
